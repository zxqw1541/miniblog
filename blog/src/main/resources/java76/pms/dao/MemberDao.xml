<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="java76.pms.dao.MemberDao">
	<sql id="select_inc">
		select name, email, tel, cid, photo
	</sql>
	
	<select id="selectList" resultType="member" parameterType="map">
		<include refid="select_inc"/> 
		from student
		order by
		<choose>
      <when test="keyword == 'email'"> email </when>
      <when test="keyword == 'tel'"> tel </when>
      <otherwise> name </otherwise>
    </choose>
    <choose>
      <when test="align == 'desc'">desc</when>
      <otherwise>asc</otherwise>
    </choose>
		limit #{startIndex}, #{length}
	</select>

	<insert id="insert" parameterType="member">
		insert into student(name,email,tel,cid,photo,pwd)
		values(#{name},#{email},#{tel},#{cid},#{photo},sha1(#{password}))
	</insert>

	<delete id="delete" parameterType="string">
		delete from student where email=#{value}
	</delete>

	<update id="update" parameterType="member">
		update student set
		name=#{name},
		tel=#{tel},
		cid=#{cid},
		photo=#{photo}
		where email=#{email}
	</update>
	
	<select id="selectOne" resultType="member" parameterType="string">
		<include refid="select_inc"/>
		from student
		where email=#{email}
	</select>
	
	<select id="login" resultType="member" parameterType="map">
		<include refid="select_inc"/>
		from student
		where email=#{email} and pwd=sha1(#{password})
	</select>
</mapper>





