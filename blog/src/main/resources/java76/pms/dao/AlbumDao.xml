<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="java76.pms.dao.AlbumDao">

  <resultMap type="album" id="albumMap">
    <id 		column="ano" 		    property="no"/>
    <result column="cre_dt" 		property="createdDate"/>
    <result column="thumnail" 		  property="attachFile"/>
  </resultMap>

  <select id="selectList" resultMap="albumMap" parameterType="map">
    select 
      ano,
      title,
      views,
      cre_dt,
      thumnail
    from album
    order by 
    <choose>
      <when test="keyword == 'title'">title </when>
      <when test="keyword == 'views'">views </when>
      <otherwise>ano </otherwise>
    </choose>
    <choose>
      <when test="align == 'asc'">asc</when>
      <otherwise>desc</otherwise>
    </choose>
    limit #{startIndex}, #{length}
  </select>
  
  <insert id="insert" parameterType="album">
    insert into album(title,comment,site,thumnail,mno,cre_dt) 
    values(#{title},#{comment},#{site},#{attachFile},#{mno},now())
  </insert>
  
  <delete id="delete" parameterType="map">
    delete from album 
  	where ano=#{no} and mno = #{mno}
  </delete>
  
  <update id="update" parameterType="album">
    update album set 
      title=#{title},
      comment=#{comment},
      cre_dt=now(),
  	  thumnail=#{attachFile},
  	  site=#{site}
    where ano=#{no} and mno = #{mno}
  </update>
  
  <select id="selectOne" resultMap="albumMap" parameterType="int">
    select 
      ano,
      title,
      views,
      cre_dt,
      thumnail,
      comment,
      site,
      mno
    from album
    where ano=#{no}
  </select>
</mapper>






